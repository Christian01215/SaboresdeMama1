<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.GestionPedidosPage"
             Title="Gestión de Pedidos">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Nuevo Pedido" FontSize="Large" FontAttributes="Bold" />

        <Entry x:Name="DescripcionEntry" Placeholder="Descripción del producto" />
        <DatePicker x:Name="FechaDatePicker" />
        <Entry x:Name="TotalEntry" Placeholder="Monto Total" Keyboard="Numeric" />

        <Button Text="Guardar Pedido" Clicked="OnGuardarClicked" />

        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20"/>

        <Label Text="Pedidos Pendientes" FontSize="Large" FontAttributes="Bold" />

        <CollectionView x:Name="PedidosCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{Binding DescripcionProducto}" FontAttributes="Bold" />
                            <Label Text="{Binding FechaEntrega, StringFormat='{0:dd/MM/yyyy}'}" />
                            <Label Text="{Binding Total, StringFormat='Total: ${0}'}" />
                        </VerticalStackLayout>

                        <Button Grid.Column="1" 
                                Text="Eliminar" 
                                BackgroundColor="Red"
                                Clicked="OnEliminarClicked" 
                                CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>