<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.VentasPage"
             Title="Registro de Ventas">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Ventas Completadas" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

        <Label x:Name="TotalMesLabel"
               Text="Total este mes: $0.00"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#007F00" 
               HorizontalOptions="Center"
               Margin="0,10" />

        <BoxView HeightRequest="1" BackgroundColor="LightGray" />

        <Label Text="Historial de Ventas" FontSize="Medium" Margin="0,5" />

        <CollectionView x:Name="VentasCollectionView" Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="5" CornerRadius="10" BorderColor="LightGray">
                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">

                            <VerticalStackLayout Grid.Column="0" Spacing="5">

                                <Label Text="{Binding ClienteNombre}" FontSize="18" FontAttributes="Bold" />

                                <Label Text="{Binding DescripcionProducto}" />
                                <Label Text="{Binding FechaCompletado, StringFormat='Completado: {0:dd MMMM yyyy}'}" />
                                <Label Text="{Binding Total, StringFormat='Total: ${0}'}" />
                            </VerticalStackLayout>

                            <Button Grid.Column="1" 
                                    Text="Borrar" 
                                    Clicked="OnBorrarVentaClicked" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="Red"
                                    VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>