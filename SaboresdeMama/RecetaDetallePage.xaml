<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.RecetaDetallePage"
             Title="Detalle de Receta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label x:Name="NombreLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,10" />

            <Label Text="Ingredientes:"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label x:Name="IngredientesLabel" />

            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,10" />

            <Label Text="Procedimiento:"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label x:Name="ProcedimientoLabel" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>